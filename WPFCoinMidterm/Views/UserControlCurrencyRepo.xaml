<UserControl x:Class="WPFCoinMidterm.Views.UserControlCurrencyRepo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFCoinMidterm.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label>Name:</Label>
            <TextBox x:Name="txtName" Text="{Binding Name,  Mode=TwoWay}"></TextBox>
            <Label x:Name="label">Age:</Label>
            <TextBox x:Name="txtAge" Text="{Binding Age, Mode=TwoWay}"></TextBox>
            <Slider x:Name="sliderAge" Value="{Binding Text, ElementName=txtAge}" ></Slider>
        </StackPanel>

    </Grid>
</UserControl>
